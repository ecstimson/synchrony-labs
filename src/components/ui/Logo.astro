---
interface Props {
  className?: string;
  theme?: 'light' | 'dark' | 'auto';
  id?: string;
}

const { className = '', theme = 'auto', id } = Astro.props;
// For auto theme, we'll use CSS to handle it
const logoVariant = theme === 'auto' 
  ? 'navy' 
  : theme === 'dark' 
    ? 'white' 
    : 'navy';
---

<a href="/" id={id} class={`inline-block ${className}`} aria-label="Synchrony Labs Home">
  <img 
    src={`/logos/shi-sl_${logoVariant}_horizontal.svg`}
    alt="Synchrony Labs"
    class="h-24 w-auto dark:hidden"
  />
  <img 
    src="/logos/shi-sl_white_horizontal.svg"
    alt="Synchrony Labs"
    class="h-24 w-auto hidden dark:block"
  />
</a>

