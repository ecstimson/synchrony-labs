---
import type { HubPage } from '../../types/index.js';

interface Props {
  service: HubPage;
  index: number;
}

const { service, index } = Astro.props;
const isEven = index % 2 === 0;
const imageOnLeft = isEven;

// Get hub page image path - try .jpeg first, then .jpg
function getHubImagePath(slug: string): string {
  // Some hub images are .jpeg, others are .jpg
  // Try .jpeg first for cardiovascular-disease-testing, then fallback to .jpg
  if (slug === 'cardiovascular-disease-testing') {
    return `/images/services/${slug}.jpeg`;
  }
  return `/images/services/${slug}.jpg`;
}
---

<section class="py-12 md:py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="glass-card rounded-2xl p-8 md:p-12">
      <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center ${imageOnLeft ? '' : 'lg:grid-flow-dense'}`}>
        
        {/* Content - always first on mobile */}
        <div class={`order-1 ${imageOnLeft ? 'lg:col-start-2 lg:order-2' : 'lg:col-start-1 lg:order-1'}`}>
          <div class="mb-6">
            <h2 class="text-2xl md:text-3xl font-bold text-navy dark:text-white">
              {service.heroHeadline}
            </h2>
          </div>
          
          <p class="text-base leading-relaxed mb-6 text-gray-600 dark:text-gray-300">
            {service.heroDescription}
          </p>

          {service.subpages.length > 0 && (
            <div class="mb-6">
              <h3 class="text-xs font-bold uppercase tracking-widest mb-4 text-gray-600 dark:text-gray-400">
                Featured Services:
              </h3>
              <ul class="space-y-3 mb-6">
                {service.subpages.map((subpage) => (
                  <li class="group">
                    <a href={subpage.url} class="flex items-center text-base transition-colors text-gray-600 dark:text-gray-300 hover:text-teal dark:hover:text-teal-bright">
                      <span class="w-2 h-2 rounded-full bg-teal mr-3 mt-1.5 flex-shrink-0"></span>
                      {subpage.heading}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <a href={`/preclinical-services/${service.slug}`} class="inline-flex items-center text-teal font-bold hover:text-teal-bright transition-colors group text-sm">
            View All {service.heroHeadline.split(' ')[0]} Services 
            <svg class="ml-2 transform group-hover:translate-x-1 transition-transform w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        {/* Image - always second on mobile */}
        <div class={`order-2 ${imageOnLeft ? 'lg:col-start-1 lg:order-1' : 'lg:col-start-2 lg:order-2'}`}>
          <div class="aspect-[4/3] rounded-xl overflow-hidden bg-gray-100 dark:bg-navy-dark/50 border border-navy/10 dark:border-white/10">
            <img 
              src={getHubImagePath(service.slug)}
              alt={service.heroHeadline}
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

