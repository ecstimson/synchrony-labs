---
interface Props {
  items: Array<{ label: string; url: string }>;
}

const { items } = Astro.props;
---

<nav class="flex items-center flex-wrap gap-x-1.5 gap-y-1 text-xs sm:text-sm mb-6 sm:mb-8 overflow-hidden" aria-label="Breadcrumb">
  {items.map((item, index) => (
    <>
      {index > 0 && (
        <svg class="w-3 h-3 sm:w-3.5 sm:h-3.5 text-gray-400 dark:text-gray-500 flex-shrink-0 mx-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      )}
      {index === items.length - 1 ? (
        <span class="text-gray-700 dark:text-gray-300 font-medium truncate max-w-[calc(100vw-3rem)] sm:max-w-none" title={item.label}>{item.label}</span>
      ) : (
        <a href={item.url} class="text-teal hover:text-teal-bright transition-colors truncate max-w-[140px] sm:max-w-[180px] md:max-w-none" title={item.label}>
          {item.label}
        </a>
      )}
    </>
  ))}
</nav>

