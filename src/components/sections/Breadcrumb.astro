---
interface Props {
  items: Array<{ label: string; url: string }>;
}

const { items } = Astro.props;
---

<nav class="flex items-center space-x-2 text-sm mb-8" aria-label="Breadcrumb">
  {items.map((item, index) => (
    <>
      {index > 0 && (
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      )}
      {index === items.length - 1 ? (
        <span class="text-gray-600 dark:text-gray-400 font-medium">{item.label}</span>
      ) : (
        <a href={item.url} class="text-teal hover:text-teal-bright transition-colors">
          {item.label}
        </a>
      )}
    </>
  ))}
</nav>

