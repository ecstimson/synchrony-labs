---
import type { Capability } from '../../types/index.js';

interface Props {
  title: string;
  description: string;
  capabilitiesTitle?: string;
  capabilities?: Capability[];
}

const { title, description, capabilitiesTitle, capabilities } = Astro.props;
---

<section class="py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-6">
        {title}
      </h2>
      <div class="prose prose-lg dark:prose-invert max-w-none mb-12">
        <p class="text-gray-600 dark:text-gray-400 leading-relaxed whitespace-pre-line">
          {description}
        </p>
      </div>

      {capabilitiesTitle && capabilities && capabilities.length > 0 && (
        <div class="mt-12">
          <h3 class="text-2xl font-bold text-navy dark:text-white mb-6">
            {capabilitiesTitle}
          </h3>
          <div class="space-y-6">
            {capabilities.map((capability) => (
              <div class="glass-card rounded-lg p-6">
                <h4 class="text-xl font-bold text-navy dark:text-white mb-2">
                  {capability.title}
                </h4>
                <p class="text-gray-600 dark:text-gray-400 leading-relaxed">
                  {capability.description}
                </p>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

