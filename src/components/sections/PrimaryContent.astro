---
import type { Capability } from '../../types/index.js';

interface Props {
  title: string;
  description: string;
  capabilitiesTitle?: string;
  capabilities?: Capability[];
}

const { title, description, capabilitiesTitle, capabilities } = Astro.props;
---

<section class="py-12 sm:py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-8 lg:px-16">
      <h2 class="text-2xl sm:text-3xl font-bold text-navy dark:text-white lg:text-4xl mb-4 sm:mb-6">
        {title}
      </h2>
      <div class="prose prose-lg dark:prose-invert max-w-none mb-8 sm:mb-12">
        <p class="text-base sm:text-lg text-gray-600 dark:text-gray-400 leading-relaxed whitespace-pre-line">
          {description}
        </p>
      </div>

      {capabilitiesTitle && capabilities && capabilities.length > 0 && (
        <div class="mt-12">
          <h3 class="text-2xl font-bold text-navy dark:text-white mb-6">
            {capabilitiesTitle}
          </h3>
          <div class="space-y-4 sm:space-y-6">
            {capabilities.map((capability) => (
              <div class="flex items-start gap-3 sm:gap-4 p-4 sm:p-6 rounded-lg border border-navy/5 dark:border-white/5 bg-white/50 dark:bg-navy-card/30 backdrop-blur-sm transition-all hover:border-teal/20 dark:hover:border-teal/20">
                <div class="flex-shrink-0 mt-0.5 sm:mt-1">
                  <svg class="w-6 h-6 sm:w-7 sm:h-7 text-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div class="flex-grow min-w-0">
                  <h4 class="text-base sm:text-lg font-bold text-navy dark:text-white mb-2 leading-tight">
                    {capability.title}
                  </h4>
                  <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 leading-relaxed">
                    {capability.description}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

