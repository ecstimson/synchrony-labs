---
import Breadcrumb from './Breadcrumb.astro';

interface Props {
  headline: string;
  description: string;
  breadcrumbs: Array<{ label: string; url: string }>;
}

const { headline, description, breadcrumbs } = Astro.props;
---

<section class="relative w-full min-h-[50vh] flex items-center justify-center overflow-hidden pt-24">
  <div class="container relative z-10 mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <Breadcrumb items={breadcrumbs} />
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-navy dark:text-white sm:text-5xl lg:text-6xl mb-6 leading-tight">
        {headline}
      </h1>
      <p class="max-w-3xl mx-auto text-lg text-gray-600 dark:text-gray-400 leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</section>

