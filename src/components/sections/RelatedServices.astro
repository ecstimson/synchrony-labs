---
import type { RelatedService } from '../../types/index.js';
import Button from '../ui/Button.astro';

interface Props {
  title: string;
  description?: string;
  services: RelatedService[];
}

const { title, description, services } = Astro.props;
---

<section class="py-16 bg-transparent border-t border-navy/5 dark:border-white/5">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-4">
        {title}
      </h2>
      {description && (
        <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-400">
          {description}
        </p>
      )}
    </div>

    <div class="grid gap-6 md:grid-cols-3">
      {services.map((service) => (
        <div class="glass-card rounded-xl p-8">
          <h3 class="text-xl font-bold text-navy dark:text-white mb-3">
            {service.heading}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-6">
            {service.text}
          </p>
          <Button variant="outline" href={service.ctaUrl} size="sm">
            {service.ctaText}
          </Button>
        </div>
      ))}
    </div>
  </div>
</section>

