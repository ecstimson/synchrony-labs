---
import type { SubPage } from '../../types/index.js';

interface Props {
  title: string;
  description: string;
  items: SubPage[];
}

const { title, description, items } = Astro.props;
---

<section class="py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-4">
        {title}
      </h2>
      <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-400">
        {description}
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <a 
          href={item.url}
          class="group glass-card rounded-xl p-8 transition-all duration-300 hover:-translate-y-1 flex flex-col h-full"
        >
          <h3 class="text-xl font-bold text-navy dark:text-white mb-4 group-hover:text-teal transition-colors">
            {item.heading}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-4 flex-grow">
            {item.text}
          </p>
          <span class="text-sm font-medium text-teal group-hover:underline mt-auto">
            Learn More â†’
          </span>
        </a>
      ))}
    </div>
  </div>
</section>

