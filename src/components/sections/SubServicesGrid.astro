---
import type { SubPage } from '../../types/index.js';

interface Props {
  title: string;
  description: string;
  items: SubPage[];
}

const { title, description, items } = Astro.props;

// Icon mapping for common icons
const getIcon = (iconName?: string) => {
  if (!iconName) return null;
  const icons: Record<string, string> = {
    'Heart': 'heart',
    'Clipboard': 'clipboard',
    'Zap': 'zap',
    'Grip': 'grip',
    'Circle': 'circle',
    'Expand': 'expand',
    'Layers': 'layers',
    'Anchor': 'anchor',
    'Triangle': 'triangle',
    'Hexagon': 'hexagon',
    'MapPin': 'map-pin',
    'Eye': 'eye',
    'Filter': 'filter',
    'Shield': 'shield',
    'Droplet': 'droplet',
  };
  return icons[iconName] || null;
};
---

<section class="py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-4">
        {title}
      </h2>
      <p class="max-w-2xl mx-auto text-gray-600 dark:text-gray-400">
        {description}
      </p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {items.map((item) => (
        <a 
          href={item.url}
          class="group glass-card rounded-xl p-8 transition-all duration-300 hover:-translate-y-1"
        >
          {item.icon && (
            <div class="mb-6 flex h-14 w-14 items-center justify-center rounded-lg bg-navy/5 dark:bg-white/5 border border-navy/10 dark:border-white/10 text-teal transition-transform duration-500 group-hover:scale-110 shadow-lg">
              <svg class="h-7 w-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
          )}
          <h3 class="text-xl font-bold text-navy dark:text-white mb-4 group-hover:text-teal transition-colors">
            {item.heading}
          </h3>
          <p class="text-gray-600 dark:text-gray-400 leading-relaxed mb-4">
            {item.text}
          </p>
          <span class="text-sm font-medium text-teal group-hover:underline">
            Learn More â†’
          </span>
        </a>
      ))}
    </div>
  </div>
</section>

