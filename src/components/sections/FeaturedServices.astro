---
import type { FeaturedService } from '../../types/index.js';

interface Props {
  title: string;
  services: FeaturedService[];
}

const { title, services } = Astro.props;

// Map image names to actual file paths
function getImagePath(imageUrl?: string, heading?: string): string {
  if (!imageUrl && !heading) return '/images/placeholder.jpg';
  
  // If imageUrl is already a local path, use it
  if (imageUrl && !imageUrl.startsWith('http')) {
    return imageUrl.startsWith('/') ? imageUrl : `/images/services/${imageUrl}`;
  }
  
  // Use heading to map to image file (images are named after headings)
  if (heading) {
    const imagePath = `/images/services/${heading}.jpg`;
    return imagePath;
  }
  
  // Fallback for Google Drive URLs or other cases - try to extract from URL
  if (imageUrl) {
    // Try to match known patterns
    const imageMap: Record<string, string> = {
      'Heart Valve Testing': '/images/services/Heart Valve Testing.jpg',
      'Structural Heart Testing': '/images/services/Structural Heart Testing.jpg',
      'Coronary Stent Testing': '/images/services/Coronary Stent Testing.jpg',
      'Thrombectomy Testing': '/images/services/Thrombectomy Testing.jpg',
      'Direct Aspiration Thrombectomy Testing': '/images/services/Direct Aspiration Thrombectomy Testing.jpg',
      'Liquid Embolic Device Testing': '/images/services/Liquid Embolic Device Testing.jpg',
      'Carotid Stent Testing': '/images/services/Carotid Stent Testing.jpg',
      'AAA Device Testing': '/images/services/AAA Device Testing.jpg',
      'IVC Filter Testing': '/images/services/IVC Filter Testing.jpg',
      'Endoscopic Device Testing': '/images/services/Endoscopic Device Testing.jpg',
      'Laparoscopic Testing': '/images/services/Laparoscopic Testing.jpg',
      'Robotic System Integration Testing': '/images/services/Robotic System Integration Testing.jpg',
      'GLP Testing': '/images/services/GLP Testing.jpg',
      'Biocompatibility Testing': '/images/services/Biocompatibility Testing.jpg',
      'FDA Regulatory Testing': '/images/services/FDA Regulatory Testing.jpg',
      'Comprehensive DCB Validation': '/images/services/Comprehensive DCB Validation.jpg',
    };
    
    // Try to find a match in the URL
    for (const [key, path] of Object.entries(imageMap)) {
      if (imageUrl.includes(key)) {
        return path;
      }
    }
  }
  
  return '/images/placeholder.jpg';
}

---

<section class="py-12 md:py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-12 text-center">
      {title}
    </h2>

    <div class="space-y-12">
      {services.map((service, index) => {
        const isEven = index % 2 === 0;
        const imageOnLeft = isEven;
        
        return (
          <div class="glass-card rounded-2xl p-8 md:p-12">
            <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center ${imageOnLeft ? '' : 'lg:grid-flow-dense'}`}>
              
              {/* Content - always first on mobile */}
              <div class={`order-1 ${imageOnLeft ? 'lg:col-start-2 lg:order-2' : 'lg:col-start-1 lg:order-1'}`}>
                <div class="mb-6">
                  <h3 class="text-2xl md:text-3xl font-bold text-navy dark:text-white">
                    {service.heading}
                  </h3>
                </div>
                
                <p class="text-base leading-relaxed mb-6 text-gray-600 dark:text-gray-300">
                  {service.text}
                </p>

                <a href={service.ctaUrl} class="inline-flex items-center text-teal font-bold hover:text-teal-bright transition-colors group text-sm">
                  {service.ctaText}
                  <svg class="ml-2 transform group-hover:translate-x-1 transition-transform w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>

              {/* Image - always second on mobile */}
              <div class={`order-2 ${imageOnLeft ? 'lg:col-start-1 lg:order-1' : 'lg:col-start-2 lg:order-2'}`}>
                <div class="aspect-[4/3] rounded-xl overflow-hidden bg-gray-100 dark:bg-navy-dark/50 border border-navy/10 dark:border-white/10">
                  <img 
                    src={getImagePath(service.image, service.heading)} 
                    alt={service.heading}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

