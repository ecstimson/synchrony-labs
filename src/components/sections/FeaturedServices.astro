---
import type { FeaturedService } from '../../types/index.js';

interface Props {
  title: string;
  services: FeaturedService[];
}

const { title, services } = Astro.props;

// Map image names to actual file paths
function getImagePath(imageUrl?: string): string {
  if (!imageUrl) return '/images/placeholder.jpg';
  // Extract filename from Google Drive URL or use as-is
  const filename = imageUrl.split('/').pop() || 'placeholder.jpg';
  // Map to actual image files
  const imageMap: Record<string, string> = {
    'Heart Valve Testing.jpg': '/images/services/Heart Valve Testing.jpg',
    'Structural Heart Testing.jpg': '/images/services/Structural Heart Testing.jpg',
    'Coronary Stent Testing.jpg': '/images/services/Coronary Stent Testing.jpg',
    'Thrombectomy Testing.jpg': '/images/services/Thrombectomy Testing.jpg',
    'Direct Aspiration Thrombectomy Testing.jpg': '/images/services/Direct Aspiration Thrombectomy Testing.jpg',
    'Liquid Embolic Device Testing.jpg': '/images/services/Liquid Embolic Device Testing.jpg',
    'Carotid Stent Testing.jpg': '/images/services/Carotid Stent Testing.jpg',
    'AAA Device Testing.jpg': '/images/services/AAA Device Testing.jpg',
    'IVC Filter Testing.jpg': '/images/services/IVC Filter Testing.jpg',
    'Endoscopic Device Testing.jpg': '/images/services/Endoscopic Device Testing.jpg',
    'Laparoscopic Testing.jpg': '/images/services/Laparoscopic Testing.jpg',
    'GLP Testing.jpg': '/images/services/GLP Testing.jpg',
    'Biocompatibility Testing.jpg': '/images/services/Biocompatibility Testing.jpg',
    'FDA Regulatory Testing.jpg': '/images/services/FDA Regulatory Testing.jpg',
    'Comprehensive DCB Validation.jpg': '/images/services/Comprehensive DCB Validation.jpg',
  };
  return imageMap[filename] || '/images/placeholder.jpg';
}

---

<section class="py-12 md:py-16 bg-transparent">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-navy dark:text-white sm:text-4xl mb-12 text-center">
      {title}
    </h2>

    <div class="space-y-12">
      {services.map((service, index) => {
        const isEven = index % 2 === 0;
        const imageOnLeft = isEven;
        
        return (
          <div class="glass-card rounded-2xl p-8 md:p-12">
            <div class={`grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center ${imageOnLeft ? '' : 'lg:grid-flow-dense'}`}>
              
              {/* Content - always first on mobile */}
              <div class={`order-1 ${imageOnLeft ? 'lg:col-start-2 lg:order-2' : 'lg:col-start-1 lg:order-1'}`}>
                <div class="mb-6">
                  <h3 class="text-2xl md:text-3xl font-bold text-navy dark:text-white">
                    {service.heading}
                  </h3>
                </div>
                
                <p class="text-base leading-relaxed mb-6 text-gray-600 dark:text-gray-300">
                  {service.text}
                </p>

                <a href={service.ctaUrl} class="inline-flex items-center text-teal font-bold hover:text-teal-bright transition-colors group text-sm">
                  {service.ctaText}
                  <svg class="ml-2 transform group-hover:translate-x-1 transition-transform w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>

              {/* Image - always second on mobile */}
              <div class={`order-2 ${imageOnLeft ? 'lg:col-start-1 lg:order-1' : 'lg:col-start-2 lg:order-2'}`}>
                <div class="aspect-[4/3] rounded-xl overflow-hidden bg-gray-100 dark:bg-navy-dark/50 border border-navy/10 dark:border-white/10">
                  <img 
                    src={getImagePath(service.image)} 
                    alt={service.heading}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </div>
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>

